
@{
    ViewData["Title"] = "Удаление";
}

@model InTouch2021.Models.FeedBackModel;

<h1 class="display-3 text-center m-5">Удаление</h1>

<form method="post" asp-action="postDelete">
    <input asp-for="Id" hidden />
    <div class="demo-card-square-feed card-own-general mdl-card mdl-shadow--2dp container d-flex flex-column justify-content-around animate__animated animate__fadeInUp animate__delay-1s">
        <div class="row w-75">
            <div class="col">
                <input disabled asp-for="name" class="mdl-textfield__input m-2" type="text" id="sample1" placeholder="Ваше имя">
                <span asp-validation-for="name" class="mdl-textfield__error">Некорректный ввод</span>
            </div>

        </div>
        <div class="row w-75">
            <div class="col">
                <input disabled asp-for="phoneNumber" placeholder="Номер телефона" class="mdl-textfield__input m-2" type="text" pattern="\+7\s?[\(]{0,1}9[0-9]{2}[\)]{0,1}\s?\d{3}[-]{0,1}\d{2}[-]{0,1}\d{2}" id="sample2">
                <span asp-validation-for="phoneNumber" class="mdl-textfield__error">Некорректный ввод</span>
            </div>


        </div>
        <div class="row w-75">
            <div class="col">
                <input disabled asp-for="email" placeholder="email" class="mdl-textfield__input m-2" type="email" id="email" pattern="[a-z0-9._%+-]+\@@[a-z0-9.-]+\.[a-z]{2, 4}$">
                <span asp-validation-for="email" class="mdl-textfield__error">Некорректный ввод</span>
            </div>

        </div>


        <div class="row w-75">
            <div class="col">
                <input disabled asp-for="studNumber" placeholder="студенческий билет №" class="mdl-textfield__input m-2" type="text" id="sample2">
                <span asp-validation-for="studNumber" class="mdl-textfield__error">Некорректный ввод</span>
            </div>

        </div>

        <div class="row w-75">
            <div class="col">
                <textarea disabled asp-for="message" placeholder="Оставьте сообщение" class="mdl-textfield__input m-2" type="text" rows="3" id="message_box"></textarea>

            </div>

        </div>

        <div class="row w-75">
            <div class="col-12">
                <h6 class="m-3">Категория вопроса</h6>
            </div>

            <div class="col-3 m-3">
                <input disabled asp-for="Value" type="radio" id="bulg" checked value="Бухгалтерия">
                <label for="bulg">Бухгалтерия</label>
            </div>
            <div class="col-3 m-3">
                <input disabled asp-for="Value" type="radio" id="kanc" value="канцелярский о.">
                <label for="kanc">канцелярский отдел</label>
            </div>
            <div class="col-3 m-3">
                <input disabled asp-for="Value" type="radio" id="study" value="учебный о.">
                <label for="study">Учебный отдел</label>
            </div>
            <div class="col-3 m-3">
                <input disabled asp-for="Value" type="radio" id="rect" value="ректорать">
                <label for="rect">Ректорат</label>
            </div>
            <div class="col-3 m-3">
                <input disabled asp-for="Value" type="radio" id="home" value="общежитие">
                <label for="home">Общежитие</label>
            </div>
        </div>

        <div class="row">
            <button  type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
               Удалить
            </button>
        </div>

    </div>
</form>

